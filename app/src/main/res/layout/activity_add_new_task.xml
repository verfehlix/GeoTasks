<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="pc.com.geotasks.AddNewTaskActivity">

    <!--Toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:contentInsetStart="0px"
        android:contentInsetLeft="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/exitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:drawableStart="@drawable/ic_clear"
                    style="?android:attr/borderlessButtonStyle"
                    android:onClick="exitButtonPressed"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="8" />


                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:text="Save"
                    android:onClick="saveButtonPressed"/>

            </LinearLayout>

            <EditText
                android:id="@+id/editTextTaskName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:hint="Enter Task Name..."
                android:background="@color/colorPrimary"
                android:maxLines="1"
                android:maxLength="250"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <!--Scrollable Content below-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="105dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Task Description-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/pencil_icon"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:layout_marginRight="15dp" />

                <EditText
                    android:id="@+id/editTextTaskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:hint="Enter a description for the task"
                    android:background="@android:color/transparent" />
            </LinearLayout>

            <!--Seperator-->
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <!-- Tag / Category -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_height="fill_parent"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_label_outline_black_24dp"
                    android:layout_marginRight="15dp" />

                <EditText
                    android:id="@+id/categoryEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Add a tag to categorize the task"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <!-- Seperator -->
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <!--Place-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_height="fill_parent"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_location_on_black_24dp"
                        android:layout_marginRight="15dp" />

                    <!-- Use current location -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_weight="1"
                        android:text="Use current location"
                        android:id="@+id/textView2" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <Switch
                        android:id="@+id/useCurrentLocationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:checked="false" />

                </LinearLayout>

                <!-- OR text -->
                <TextView
                    android:id="@+id/orTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="or"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <!-- Location Search -->
                <EditText
                    android:id="@+id/editTextLocationAutocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search a location"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:id="@+id/textViewLngLtd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="15dp" />

                <!-- Radius -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Radius"
                        android:id="@+id/textView4"
                        android:layout_marginLeft="40dp" />

                    <SeekBar
                        android:id="@+id/radiusSeekBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:max="5000"
                        android:layout_weight="1"
                        android:progress="150" />

                    <EditText
                        android:id="@+id/meterEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:background="@android:color/transparent"
                        android:hint="150"
                        android:layout_weight="0.1"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="m"
                        android:id="@+id/textView6" />
                </LinearLayout>

            </LinearLayout>

            <!-- Seperator -->
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <!-- Date and Time Picker -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginRight="15dp" />

                    <EditText
                        android:id="@+id/datePickerEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Select a date"
                        android:layout_gravity="left"
                        android:layout_weight="5"
                        android:layout_marginRight="15dp"
                        android:background="@android:color/transparent"/>

                    <EditText
                        android:id="@+id/timePickerEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Select the time"
                        android:layout_weight="5"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
